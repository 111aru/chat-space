.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li
          =link_to new_group_path, class: "side-header__box__menu__new-group side-header__box__menu__new-group__btn" do
            = icon('fas', 'edit', class: "side-header__box__menu__new-group--icon")
            %span<>
        %li
          =link_to edit_user_path(current_user), class: "side-header__box__menu__edit-user side-header__box__menu__edit-user__btn" do
            = icon('fas', 'cog', class: "side-header__box__menu__edit-user--icon")
            %span<>
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message